{% extends 'adminbase.html.twig' %}



{% block title %}Orders{% endblock %}



{% block body %}
    <h1>Orders</h1>
    {% block all %} {{ include ('admin/all.html.twig') }} {% endblock %}
    <table class="table"  style="width: 550px" align="center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>

            </tr>
            <tr>
                <th>Shipinfo</th>
                <td>{{ order.shipinfo }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ order.note }}</td>
            </tr>
        </tbody>
    </table>
    <form action="{{ path('admin_orders_update',{'id':order.id}) }}" style="margin-left: 500px" method="post">



        <tr>
            <th>Admin Notu</th>
            <td> <textarea name="note"cols="100"rows="3"> {{ order.note }} </textarea> </td>

        </tr>

        <tr>
            <th>STATUS</th>
            <td><select name="status">

                    <option>{{ order.status }}</option>
                    <option>Accepted</option>
                    <option>kargoda</option>
                    <option>refused</option>
                    <option>tamamlanmış</option>


                </select>

                <input type="submit" value="güncelle">

            </td>


        </tr>




    </form>


