{% extends 'frontbase.html.twig' %}

{% block title %} SHOPCART {% endblock %}

{% block sidebar %} {{ include ('home/usersidebar.html.twig') }} {% endblock %}

{% block content %}


<div class="product-information"><!--/product-information-->
    <h1>Shopcart </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>product name</th>
                <th>sale price</th>
                <th>Quantity</th>
                <th>total</th>
            </tr>
        </thead>
        <tbody>
        {% for shopcart in shopcarts %}
            <tr>
                <td>{{ shopcart.id }}</td>
                <td>{{ shopcart.title }}</td>
                <td>{{ shopcart.sprice }}</td>
                <td>{{ shopcart.quantity }}</td>
                 <td>{{ shopcart.quantity * shopcart.sprice }}</td>
                <td>
                    <a href="{{ path('shopcart_delete', {'id': shopcart.id}) }}" class="btn btn-danger">delete</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>


    </table>
    <a href="{{ path('orders_new') }}" class="btn btn-success"> SatÄ±n Al</a>
   
     <script src="js/jquery.js"></script>
	<script src="js/price-range.js"></script>
    <script src="js/jquery.scrollUp.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.prettyPhoto.js"></script>
    <script src="js/main.js"></script>


{% endblock %}

